@model cspv3.ViewModels.SupportViewModel
@{
    ViewBag.Title = "Tickets";
    Layout = "_CustomerLayout";
}
@using Microsoft.AspNetCore.Http;
@inject UserManager<ApplicationUser> userManager;


    <div class="content-wrapper">
        <div class="page-header">


            <h4 class="page-title"> Create Support Ticket</h4>



            <nav aria-label="breadcrumb">
                <ol class="breadcrumb">
                    <li class="breadcrumb-item"><a href="#">Home</a></li>
                    <li class="breadcrumb-item"><a asp-controller="CustomerDashboard" asp-action="SupportIndex">Support List</a></li>
                    <li class="breadcrumb-item active" aria-current="page">Create Ticket</li>
                </ol>
            </nav>

        </div>

        <div class="col-sm-8">
            <div class="panel panel-default card-view">
                <div class="panel-wrapper collapse in">
                    <div class="panel-body">


                        <!--begin::Form-->
                        <form class="m-form m-form--fit m-form--label-align-right" method="post" enctype="multipart/form-data" asp-controller="Customerdashboard" asp-action="supportaction">
                            <div class="m-portlet__body">

                                <div class="form-group m-form__group">
                                    <label for="dept">
                                        Department
                                    </label>
                                    <select asp-for="Department" class="form-control m-input" id="dept">
                                        <option>
                                            Technical Support
                                        </option>
                                        <option>
                                            Sales Support
                                        </option>


                                    </select>
                                </div>
                                <div class="form-group m-form__group">
                                    <label for="priority">
                                        Priority
                                    </label>
                                    <select asp-for="Priority" class="form-control m-input" id="priority">
                                        <option>
                                            Low
                                        </option>
                                        <option>
                                            Medium
                                        </option>
                                        <option>
                                            High
                                        </option>

                                    </select>
                                </div>
                                <div class="form-group m-form__group">
                                    <label for="subject">
                                        Subject
                                    </label>
                                    <input asp-for="Subject" type="text" class="form-control m-input" id="subject">
                                    <span asp-validation-for="Subject"></span>

                                </div>



                                <div class="form-group m-form__group">
                                    <label for="desc">
                                        Description
                                    </label>
                                    <textarea asp-for="Message" class="form-control m-input" id="desc" rows="7"></textarea>
                                    <span asp-validation-for="Message"></span>
                                </div>
                            </div>
                            <div class="form-group">
                                <div class="col-md-10">
                                    <p>Upload one or more attachments:</p>
                                    <input asp-for="File" class="btn btn-outline-light" style="color:darkgoldenrod; border-color:darkgoldenrod" />
                                </div>
                            </div>
                            <div class="form-group">
                                <div class="col-md-10">
                                    <button type="submit" value="submit" class="btn active" style="color:white; background-color:darkgoldenrod">
                                        Submit
                                    </button>
                                    <button type="reset" class="btn btn-danger">
                                        Cancel
                                    </button>
                                </div>
                            </div>
                           
                        </form>
                        <!--end::Form-->
                    </div>
                </div>
            </div>
        </div>
    </div>
        @*</div>
    </div>
</div>*@
<!--end::Portlet-->
