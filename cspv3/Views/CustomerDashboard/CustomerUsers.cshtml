
@model List<cspv3.Models.CspApiModels.UserResponse.Item>
@{
    ViewBag.Title = "Customer Users";
    Layout = "_CustomerLayout";
    var CustomerId = ViewBag.CustomerId as string;
}


@inject UserManager<ApplicationUser> userManager;



<div class="row">

    <div class="col-sm-12">


        <div class="page-header">


            <h4 class="page-title"> Customer Users </h4>



            <nav aria-label="breadcrumb">
                <ol class="breadcrumb">
                    <li class="breadcrumb-item"><a href="#">Home</a></li>
                    <li class="breadcrumb-item active" aria-current="page">Customers Users</li>
                </ol>
            </nav>

        </div>

        <div class="row grid-margin col-lg-12">
            <div class="col-lg-12">
                <div class="card">
                    <div class="card-body">
                        <h6 class="card-title text-md-right">

                            <a class="btn btn-primary" asp-action="CreateUser" asp-controller="CustomerDashBoard" style="color:white">Create a new User</a>

                        </h6>
                        <br />

                        <div class="panel panel-default card-view">
                            <div class="panel-wrapper collapse in">

                                <div class="panel-body">

                                    <div class="table-wrap">
                                        <div class="table-responsive">
                                            <table id="example" class="table table-hover display  pb-30">
                                                <thead class="blue-grey lighten-4">
                                                    <tr>
                                                        <th>
                                                            User Id
                                                        </th>
                                                        <th>
                                                            First Name
                                                        </th>
                                                        <th>
                                                            Last Name
                                                        </th>
                                                        <th>
                                                            User Principal Name
                                                        </th>
                                                        <th>
                                                            Display Name
                                                        </th>

                                                        <th>
                                                            Licenses
                                                        </th>


                                                    </tr>
                                                </thead>
                                                <tbody>
                                                    @foreach (var item in Model)
                                                    {
                                                        <tr>
                                                            <td>
                                                                @Html.DisplayFor(modelItem => item.Id)
                                                            </td>
                                                            <td>
                                                                @Html.DisplayFor(modelItem => item.FirstName)
                                                            </td>
                                                            <td>
                                                                @Html.DisplayFor(modelItem => item.LastName)
                                                            </td>
                                                            <td>
                                                                @Html.DisplayFor(modelItem => item.UserPrincipalName)
                                                            </td>
                                                            <td>
                                                                @Html.DisplayFor(modelItem => item.DisplayName)
                                                            </td>
                                                            <td>
                                                                <a asp-action="ViewLicense" asp-route-UserId="@item.Id" class="btn btn-warning"> View License</a>
                                                                |
                                                                <a asp-action="AddLicense" asp-route-UserId="@item.Id" class="btn btn-info"> Add License</a>  |
                                                                <a asp-action="DeleteUser" asp-controller="CustomerDashboard" asp-route-UserId="@item.Id" class="btn btn-danger"> Delete User</a>
                                                            </td>


                                                        </tr>

                                                    }
                                                </tbody>
                                            </table>
                                        </div>
                                        <br />

                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>