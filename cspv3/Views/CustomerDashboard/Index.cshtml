@model cspv3.Models.ApplicationUser
@using Microsoft.AspNetCore.Http;

@{
    ViewData["Title"] = "Customer Dashboard";
    Layout = "_CustomerLayout";
}

<h4>Account Details</h4>
<div class="page-container">
    <div class="main-content">
        <div class="container-fluid">
            <div class="row heading-bg">
                <div class="col-lg-3 col-md-4 col-sm-4 col-xs-12">

                </div>
                <!-- Breadcrumb -->
                <div class="col-lg-9 col-sm-8 col-md-8 col-xs-12">
                    <ol class="breadcrumb">

                        <li><a>Home</a></li>
                        <li><a class="active">User Information</a></li>
                    </ol>
                </div>
                <!-- /Breadcrumb -->

                <div class="clearfix"></div>
            </div>


            <div class="col-sm-6">
                <div class="panel panel-default card-view">
                    <div class="panel-wrapper collapse in">
                        <div class="panel-body">



                            <div class="col-lg-12">
                                <div class="col-xl-12 col-lg-8">
                                    <!-- Begin Header Overview-->
                                    <!--Begin::Main Portlet-->
                                    <div class="m-portlet">
                                        <div class="m-portlet__body m-portlet__body--no-padding">
                                            <div class="row m-row--no-padding m-row--col-separator-xl">
                                                <div class="col-md-12 col-lg-12 col-xl-12">
                                                    <!--begin:: Widgets/Stats2-1 -->
                                                    <div class="m-widget1">
                                                        <div class="card-block">
                                                            <div class="row">
                                                                <div class="col-md-6">
                                                                    <p class="mrg-top-10 text-dark">
                                                                        <h5 class="m-widget1__title">
                                                                            <b>User Name</b>
                                                                        </h5>
                                                                    </p>
                                                                </div>
                                                                <div class="col-md-6">
                                                                    <p class="mrg-top-10 text-dark">
                                                                        <h5 style="color:slategrey">
                                                                            @Html.DisplayFor(model => model.UserName)
                                                                        </h5>
                                                                    </p>

                                                                </div>
                                                            </div>

                                                            <hr />
                                                            <div class="row">
                                                                <div class="col-md-6">
                                                                    <p class="mrg-top-10 text-dark">
                                                                        <h5 class="m-widget1__title">
                                                                            <b>Full Name</b>
                                                                        </h5>
                                                                    </p>
                                                                </div>
                                                                <div class="col-md-6">
                                                                    <p class="mrg-top-10 text-dark">
                                                                        <h5 style="color:slategrey">
                                                                            @{
                                                                                var name = Model.LastName + " " + Model.FirstName;
                                                                            }
                                                                            @name
                                                                        </h5>
                                                                    </p>

                                                                </div>
                                                            </div>
                                                            <hr />
                                                            <div class="row">
                                                                <div class="col-md-6">
                                                                    <p class="mrg-top-10 text-dark">
                                                                        <h5 class="m-widget1__title">
                                                                            <b>Phone Number</b>
                                                                        </h5>
                                                                    </p>
                                                                </div>
                                                                <div class="col-md-6">
                                                                    <p class="mrg-top-10 text-dark">
                                                                        <h5 class="m-widget1__title">
                                                                            <span style="color:slategrey">


                                                                                @{
                                                                                    var phone = Model.PhoneNumber;
                                                                                }
                                                                                @phone
                                                                            </span>
                                                                        </h5>
                                                                    </p>

                                                                </div>
                                                            </div>
                                                            <hr>
                                                            <div class="row">
                                                                <div class="col-md-6">
                                                                    <p class="mrg-top-10 text-dark">
                                                                        <h5 class="m-widget1__title">
                                                                            <b>Email</b>
                                                                        </h5>
                                                                    </p>
                                                                </div>
                                                                <div class="col-md-6">
                                                                    <p class="mrg-top-10 text-dark">
                                                                        <h5 class="m-widget1__title">

                                                                            <span style="color:darkgoldenrod">
                                                                                @Model.Email
                                                                            </span>
                                                                        </h5>
                                                                    </p>

                                                                </div>
                                                            </div>
                                                            <hr />
                                                            <div class="row">
                                                                <div class="col-md-6">
                                                                    <p class="mrg-top-10 text-dark">
                                                                        <h5 class="m-widget1__title">
                                                                            <b>Address</b>
                                                                        </h5>
                                                                    </p>
                                                                </div>
                                                                <div class="col-md-6">
                                                                    <p class="mrg-top-10 text-dark">
                                                                        <h5 class="m-widget1__title">
                                                                            <span style="color:slategrey">
                                                                                @{
                                                                                    var address = Model.UserAddress;
                                                                                }
                                                                                @address
                                                                            </span>
                                                                        </h5>
                                                                    </p>

                                                                </div>
                                                            </div>
                                                            <hr />
                                                            <div class="row">
                                                                <div class="col-md-6">
                                                                    <p class="mrg-top-10 text-dark">
                                                                        <h5 class="m-widget1__title">
                                                                            <b>Company Name</b>
                                                                        </h5>
                                                                    </p>
                                                                </div>
                                                                <div class="col-md-6">
                                                                    <p class="mrg-top-10 text-dark">
                                                                        <h5 class="m-widget1__title">
                                                                            <span style="color:slategrey">
                                                                                @{
                                                                                    var CompName = Model.CompanyName.Trim();
                                                                                }
                                                                                @CompName
                                                                            </span>
                                                                        </h5>
                                                                    </p>

                                                                </div>
                                                            </div>
                                                            <hr />
                                                            <div class="row">
                                                                <div class="col-md-6">
                                                                    <p class="mrg-top-10 text-dark">
                                                                        <h5 class="m-widget1__title">
                                                                            <b>Company Address</b>
                                                                        </h5>
                                                                    </p>
                                                                </div>
                                                                <div class="col-md-6">
                                                                    <p class="mrg-top-10 text-dark">
                                                                        <h5 class="m-widget1__title">
                                                                            <span style="color:slategrey">
                                                                                @{
                                                                                    var CompAdd = Model.CompanyAddress.Trim();
                                                                                }
                                                                                @CompAdd
                                                                            </span>
                                                                        </h5>
                                                                    </p>

                                                                </div>
                                                            </div>

                                                            <hr />
                                                            <div class="row">
                                                                <div class="col-md-6">
                                                                    <p class="mrg-top-10 text-dark">
                                                                        <h5 class="m-widget1__title">
                                                                            <b> Registration Date</b>
                                                                        </h5>
                                                                    </p>
                                                                </div>
                                                                <div class="col-md-6">
                                                                    <p class="mrg-top-10 text-dark">
                                                                        <h5 class="m-widget1__title">
                                                                            <span style="color:slategrey">
                                                                                @{
                                                                                    var regdate = Model.RegisterationDate.ToLongDateString();
                                                                                }
                                                                                @regdate
                                                                            </span>
                                                                        </h5>
                                                                    </p>

                                                                </div>
                                                            </div>

                                                        </div>








                                                    </div>
                                                    <!--end:: Widgets/Stats2-1 -->
                                                </div>

                                            </div>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>