@model cspv3.Models.CspApiModels.UserResponse.Item
@{
    ViewBag.Title = "Delete User";
    Layout = "_CustomerLayout";

}

@using Microsoft.AspNetCore.Http;
@inject UserManager<ApplicationUser> userManager;



    <div class="content-wrapper">
        <div class="page-header">


            <h4 class="page-title"> Delete User  </h4>



            <nav aria-label="breadcrumb">
                <ol class="breadcrumb">
                    <li class="breadcrumb-item"><a href="#">Home</a></li>
                    <li class="breadcrumb-item active" aria-current="page">Delete User</li>
                </ol>
            </nav>

        </div>

        <div class="row grid-margin col-lg-12">
            <div class="col-lg-5">
                <div class="card">
                    <div class="card-body">
                       
                        <br />

                        <div class="panel panel-default card-view">
                            <div class="panel-wrapper collapse in">

                                <div class="panel-body">

                                    <div class="table-wrap">
                                        <div class="table-responsive">
                                            <div class="col-lg-12">
                                                <div class="col-xl-12 col-lg-12">

                                                    <h5 class="card-title" style="color:red">Are you sure you want to delete this?</h5>
                                                    <br />
                                                    <div>

                                                        <div>

                                                            <dl class="dl-horizontal">
                                                                <dt>
                                                                    Email/@Html.DisplayNameFor(model => model.UserPrincipalName)
                                                                </dt>
                                                                <dd>
                                                                    @Html.DisplayFor(model => model.UserPrincipalName)
                                                                </dd>
                                                                <dt>
                                                                    Name/@Html.DisplayNameFor(model => model.DisplayName)
                                                                </dt>
                                                                <dd>
                                                                    @Html.DisplayFor(model => model.DisplayName)
                                                                </dd>

                                                            </dl>
                                                            <br/>
                                                            <form asp-action="DeleteUserConfirmed">
                                                                <input type="hidden" name="UserId" value="@Model.Id" />
                                                                <input type="submit" value="Delete" class="btn btn-danger" />
                                                            </form>
                                                        </div>
                                                    </div>

                                                </div>
                                            </div>
                                        </div>
                                        <br />

                                    </div>
                                </div>
                            </div>
                        </div>

                    </div>
                </div>
            </div>
        </div>

       
    </div>
    
