
@model List<cspv3.Models.Order>
@{
    ViewBag.Title = "Fulfilled Orders";
    Layout = "_CustomerLayout";
}


<div class="row">

    <div class="col-sm-12">


        <div class="page-header">


            <h4 class="page-title"> Fulfilled Orders </h4>



            <nav aria-label="breadcrumb">
                <ol class="breadcrumb">
                    <li class="breadcrumb-item"><a href="#">Dashboard</a></li>
                    <li class="breadcrumb-item active" aria-current="page">Fulfilled Orders</li>
                </ol>
            </nav>

        </div>

        <div class="row grid-margin col-lg-12">
            <div class="col-lg-12">
                <div class="card">
                    <div class="card-body">
                      
                        <br />

                        <div class="panel panel-default card-view">
                            <div class="panel-wrapper collapse in">

                                <div class="panel-body">

                                    <div class="table-wrap">
                                        <div class="table-responsive">
                                            <table id="example" class="table table-hover display  pb-30">
                                                <thead>

                                                    <tr>
                                                        @*<th>
                                                                Order ID
                                                            </th>*@
                                                        <th>
                                                            Order Date
                                                        </th>
                                                        <th>
                                                            Domain
                                                        </th>
                                                        <th>
                                                            Total Payment
                                                        </th>
                                                        @*<th>
                                                                Payment Information
                                                            </th>*@
                                                        <th>
                                                            Payment Date
                                                        </th>
                                                        <th>
                                                            Payment Gateway
                                                        </th>
                                                        <th>
                                                            Order Fulfillment
                                                        </th>
                                                        <th>
                                                            Order Fulfillment Date
                                                        </th>
                                                        <th>
                                                            Next Payment Due Date
                                                        </th>
                                                        <th>
                                                           Invoice
                                                        </th>
                                                        <th>
                                                            Renewal
                                                        </th>

                                                        <th>
                                                            More Details
                                                        </th>
                                                    </tr>



                                                </thead>
                                                <tfoot>

                                                </tfoot>
                                                <tbody>
                                                    @foreach (var item in Model)
                                                    {
                                                    <tr>
                                                        @*<td>
            @Html.DisplayFor(modelItem => item.OrderId)
        </td>*@
                                                        <td>
                                                            @Html.DisplayFor(modelItem => item.OrderDate)
                                                        </td>
                                                        <td>
                                                            @Html.DisplayFor(modelItem => item.Domain)
                                                        </td>
                                                        @*<td>
            @Html.DisplayFor(modelItem => item.Total)
        </td>*@
                                                        <td>
                                                            @Html.DisplayFor(modelItem => item.Payment)
                                                        </td>

                                                        <td>
                                                            @Html.DisplayFor(modelItem => item.PaymentDate)
                                                        </td>
                                                        <td>
                                                            @Html.DisplayFor(modelItem => item.PaymentGateWay)
                                                        </td>

                                                        <td>
                                                            @Html.DisplayFor(modelItem => item.FulfillPayment)
                                                        </td>
                                                        <td>
                                                            @Html.DisplayFor(modelItem => item.FulFillmentDate)
                                                        </td>
                                                        <td>
                                                            @Html.DisplayFor(modelItem => item.NextPaymentDate)
                                                        </td>

                                                        <td>
                                                            <a class="btn btn-success" asp-action="GenerateInvoice" asp-controller="CustomerDashboard" asp-route-orderid="@item.OrderId"> Generate Invoice</a>
                                                        </td>
                                                        @{ if (item.NextPaymentDate.Subtract(DateTime.Now) <= TimeSpan.FromDays(7))
                                                            {
                                                                <td>
                                                                                                                            <button class="btn">
                                                                                                                                @Html.ActionLink("Renew Now", "RenewSubscription", "Checkout", new { id = item.OrderId })
                                                                                                                          </button>
</td>
                                                            }
                                                            else
                                                            {
                                                                <td></td>
                                                            }
                                                        }

                                                    <td>
                                                        <button class="btn btn-warning">
                                                            @Html.ActionLink("View Details", "OrderDetails", new { id = item.OrderId })
                                                            </button>


                                                    </td>
                                                    </tr>

                                                    }
                                                </tbody>
                                            </table>

                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>

</div>





