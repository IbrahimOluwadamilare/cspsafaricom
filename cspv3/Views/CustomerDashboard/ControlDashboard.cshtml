

@model cspv3.ViewModels.AdminDashBoardViewModel

@{
    ViewData["Title"] = "Customer Control Center";
    Layout = "_CustomerLayout";
}

@inject UserManager<ApplicationUser> userManager;
<style>


    #example2 {
        background-color: #022e64;
        padding: 15px;
        color: azure;
        border-color: darkgoldenrod;
    }

    #bgcolor {
        background-color: firebrick;
    }
</style>


<div class="row grid-margin col-lg-12">
    <div class="col-lg-12">
        <div class="card">
            <div class="card-body">

                <br />

                <div class="panel panel-default card-view">
                    <div class="panel-wrapper collapse in">

                        <div class="panel-body">
                             <div class="row">

                <div class="col-lg-2 col-md-6 col-sm-6 col-xs-12">
                    <div class="panel panel-default card-view pa-0">
                        <div class="panel-wrapper collapse in">
                            <div class="panel-body pa-0">
                                <div class="sm-data-box" style="background-color: cornflowerblue">
                                    <div class="container-fluid">
                                        <div class="row">
                                            <div class="col-xs-6 text-center pl-0 pr-0 data-wrap-left">
                                                <span class="txt-light block counter">
                                                    <span class="counter-anim">
                                                        @ViewBag.inorder



                                                    </span>
                                                </span>
                                                <span class="weight-500 uppercase-font block font-9 txt-light">Invoice Order</span>
                                            </div>
                                            <div class="col-xs-6 text-center  pl-0 pr-0 data-wrap-right">
                                                <i class="icon-layers data-right-rep-icon txt-light"></i>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
                <div class="col-lg-2 col-md-6 col-sm-6 col-xs-12">
                    <div class="panel panel-default card-view pa-0">
                        <div class="panel-wrapper collapse in">
                            <div class="panel-body pa-0">
                                <div class="sm-data-box" id="bgcolor">
                                    <div class="container-fluid">
                                        <div class="row">
                                            <div class="col-xs-6 text-center pl-0 pr-0 data-wrap-left">
                                                <span class="txt-light block counter">
                                                    <span class="counter-anim">

                                                        @ViewBag.unpaid


                                                    </span>
                                                </span>
                                                <span class="weight-500 uppercase-font block font-9 txt-light"> Outstanding Payments</span>
                                            </div>
                                            <div class="col-xs-6 text-center  pl-0 pr-0 data-wrap-right">
                                                <i class="icon-bag data-right-rep-icon txt-light"></i>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
                <div class="col-lg-2 col-md-6 col-sm-6 col-xs-12">
                    <div class="panel panel-default card-view pa-0">
                        <div class="panel-wrapper collapse in">
                            <div class="panel-body pa-0">
                                <div class="sm-data-box" style="background-color:forestgreen;height:100px">
                                    <div class="container-fluid">
                                        <div class="row">
                                            <div class="col-xs-6 text-center pl-0 pr-0 data-wrap-left">
                                                <span class="txt-light block counter">
                                                    <span class="counter-anim">

                                                        @ViewBag.payment


                                                    </span>
                                                </span>
                                                <span class="weight-500 uppercase-font block font-9 txt-light"> Payments</span>
                                            </div>
                                            <div class="col-xs-6 text-center  pl-0 pr-0 data-wrap-right">
                                                <span class="data-right-rep-icon txt-light">  ‎₦ </span>
                                                @*<i class="zmdi zmdi-money data-right-rep-icon txt-light"></i>*@
                                            </div>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
                <div class="col-lg-2 col-md-6 col-sm-6 col-xs-12">
                    <div class="panel panel-default card-view pa-0">
                        <div class="panel-wrapper collapse in">
                            <div class="panel-body pa-0">
                                <div class="sm-data-box" id="bgcolor">
                                    <div class="container-fluid">
                                        <div class="row">
                                            <div class="col-xs-6 text-center pl-0 pr-0 data-wrap-left">
                                                <span class="txt-light block counter">
                                                    <span class="counter-anim">

                                                        @ViewBag.unpaid



                                                    </span>
                                                </span>
                                                <span class="weight-500 uppercase-font block font-9 txt-light"> Unfulfilled Orders</span>
                                            </div>
                                            <div class="col-xs-6 text-center  pl-0 pr-0 data-wrap-right">
                                                <i class="zmdi zmdi-shopping-basket data-right-rep-icon txt-light"></i>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
                <div class="col-lg-2 col-md-6 col-sm-6 col-xs-12">
                    <div class="panel panel-default card-view pa-0">
                        <div class="panel-wrapper collapse in">
                            <div class="panel-body pa-0">
                                <div class="sm-data-box" style="background-color: darkgreen">
                                    <div class="container-fluid">
                                        <div class="row">
                                            <div class="col-xs-6 text-center pl-0 pr-0 data-wrap-left">
                                                <span class="txt-light block counter">
                                                    <span class="counter-anim">
                                                        @ViewBag.fulfilled




                                                    </span>
                                                </span>
                                                <span class="weight-500 uppercase-font block font-9 txt-light"> Fulfilled Orders</span>
                                            </div>
                                            <div class="col-xs-6 text-center  pl-0 pr-0 data-wrap-right">
                                                <i class="zmdi zmdi-shopping-cart-plus data-right-rep-icon txt-light"></i>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>

            </div>
                            
                        </div>
                    </div>
                </div>

            </div>
        </div>
    </div>
</div>
      
