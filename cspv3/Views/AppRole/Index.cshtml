@model IEnumerable<cspv3.ViewModels.ApplicationRoleListViewModel>
@{
    ViewData["Title"] = "Index";
    Layout = "_AdminLayout";

}

<div class="row">

    <div class="col-sm-12">


        <div class="page-header">


            <h4 class="page-title">  Roles </h4>



            <nav aria-label="breadcrumb">
                <ol class="breadcrumb">
                    <li class="breadcrumb-item"><a href="#">Dashboard</a></li>
                    <li class="breadcrumb-item active" aria-current="page">Roles</li>
                </ol>
            </nav>

        </div>

        <div class="row grid-margin col-lg-12">
            <div class="col-lg-12">
                <div class="card">
                    <div class="card-body">
                        <a class="btn btn-primary" asp-action="Create">Create New Role</a>
                        <br />
                        <br />

                        <div class="panel panel-default card-view">
                            <div class="panel-wrapper collapse in">

                                <div class="panel-body">

                                    <div class="table-wrap">
                                        <div class="table-responsive">
                                            <table id="example" class="table table-hover display  pb-30">
                                                <thead>
                                                    <tr>
                                                        <th>
                                                            @Html.DisplayNameFor(model => model.RoleName)
                                                        </th>
                                                        <th>
                                                            @Html.DisplayNameFor(model => model.Description)
                                                        </th>
                                                        <th>
                                                            No of Users
                                                        </th>
                                                        <th></th>
                                                    </tr>
                                                </thead>
                                                <tbody>
                                                    @foreach (var item in Model)
                                                    {
                                                        <tr>
                                                            <td>
                                                                @Html.DisplayFor(modelItem => item.RoleName)
                                                            </td>
                                                            <td>
                                                                @Html.DisplayFor(modelItem => item.Description)
                                                            </td>
                                                            <td>
                                                                @Html.DisplayFor(modelItem => item.NumberOfUsers)
                                                            </td>
                                                            <td>

                                                                <a class="btn btn-info" asp-action="AddEditApplicationRole" asp-route-id="@item.Id"><i class="fa fa-edit"></i></a>

                                                                <a class="btn btn-danger" asp-action="Delete" asp-route-id="@item.Id"><i class="fa fa-trash"></i></a>

                                                            </td>
                                                        </tr>
                                                    }
                                                </tbody>
                                            </table>
                                        </div>
                                    </div>
                                </div>
                            </div>
                            </div>
                            </div>
                            </div>
                            </div>
                            </div>
                            </div>
                            </div>




                            <!-- plugins:js -->

