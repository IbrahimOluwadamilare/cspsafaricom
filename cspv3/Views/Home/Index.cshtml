@model List<ProductOffering>
@{
    ViewData["Title"] = "Home";

}

<div id="slider" class="inspiro-slider arrows-large arrows-creative dots-creative owl-carousel owl-loaded owl-drag slider-loaded" data-height-xs="360" data-autoplay-timeout="2600" data-animate-in="fadeIn" data-animate-out="fadeOut" data-items="1" data-loop="true" data-autoplay="true" style="height: 585.667px;">

    <div class="owl-stage-outer" style="height: 585.667px;">
        <div class="owl-stage" style="transform: translate3d(-2526px, 0px, 0px); transition: all 0s ease 0s; width: 7578px; height: 585.667px;">
            <div class="owl-item" style="width: 1263px;">
              
                <div class="slide" style="background-image: url(&quot;/img/Payment-Solutions-New.jpg&quot;); height: 585.667px;">
                    <div class="container">

                    </div>
                </div>
            </div>
            <div class="owl-item" style="width: 1263px;">
                <div class="slide" style="background-image: url(&quot;/img/Betheboss.jpg&quot;); height: 585.667px;">
                    <div class="container">
                       
                    </div>
                </div>
            </div>
            <div class="owl-item" style="width: 1263px;">
                <div class="slide" style="background-image: url(&quot;/img/Mobile-Solutions-New.jpg&quot;); height: 585.667px;">
                    
                    <div class="container">

                    </div>
                </div>
            </div>

        </div>
    </div>
    <div class="owl-nav">
        <button type="button" role="presentation" class="owl-prev"><i class="icon-chevron-left1"></i></button><button type="button" role="presentation" class="owl-next"><i class="icon-chevron-right1"></i></button>
    </div><div class="owl-dots"><button role="button" class="owl-dot active"><span></span></button><button role="button" class="owl-dot"><span></span></button></div>
</div>
<section id="products">
    <div class="container">
        <div class="heading m-b-40">
            <h4>Our products</h4>
        </div>

        <div class="shop">
            <div class="row">

                @{
                    foreach (var item in Model)
                    {
                        <div class="col-lg-4">
                            <div class="product">
                                                <div class="product-image">
                                                    @if (@item.Name == "Wragby Office 365 Business Essentials")
                                                    {
                                                        <img alt="Shop product image!" src="~/img/Business Essentials.jpg">
                                                    }
                                                    @if (@item.Name == "Wragby Office 365 Business Premium")
                                                    {
                                                        <img alt="Shop product image!" src="~/img/Business Premium.jpg">
                                                    }
                                                    @if (@item.Name == "Wragby Office 365 Business")
                                                    {
                                                        <img alt="Shop product image!" src="~/img/Business.jpg">
                                                    }

                                                    <span class="product-wishlist">
                                                        <a href="#"><i class="fa fa-heart"></i></a>
                                                    </span>
                                                    <div class="product-overlay">
                                                        <a asp-controller="Home" asp-action="BusinessEssentialsInfo" data-lightbox="ajax" data-toggle="popover" asp-route-id="@item.Id">Quick View</a>
                                                    </div>
                                                </div>
                                <div class="product-description">
                                    <div class="product-category">Microsoft Office 365</div>
                                    <div class="product-title">
                                        <h4>@item.Name</h4>
                                    </div>
                                    <div class="product-price">
                                        <ins>₦@item.WragbyPrice</ins>
                                    </div>
                                    
                                    <div class="product-reviews">
                                        <a href="#">per User/Month</a>
                                    </div>
                                </div>
                            </div>
                        </div>

                    }
                }



            </div>
        </div>
    </div>
</section>

<section>
    <div class="container">
        <div class="row">
            <div class="col-lg-12">
                <div class="heading-text heading-line text-center"><h4>Browse our categories </h4> </div>
            </div>
        </div>
        <div class="shop-category">
            <div class="row">
                <div class="col-lg-4">
                    <div class="shop-category-box">
                        <a asp-action="LicencedBasedProducts" asp-controller="Home" asp-route-productCategory="Azure Active Directory">
                            <img alt="" src="~/img/11.jpeg">
                            <div class="shop-category-box-title text-center">
                                <h6>Office 365</h6><small>10 products</small>
                            </div>
                        </a>
                    </div>
                </div>
                <div class="col-lg-4">
                    <div class="shop-category-box">
                        <a href="#">
                            <img alt="" src="~/img/erp.png">
                            <div class="shop-category-box-title text-center">
                                <h6>ERP</h6><small>10 products</small>
                            </div>
                        </a>
                    </div>
                </div>
                <div class="col-lg-4">
                    <div class="shop-category-box">
                        <a href="#">
                            <img alt="" src="~/img/crp.jpg">
                            <div class="shop-category-box-title text-center">
                                <h6>CRM</h6><small>10 products</small>
                            </div>
                        </a>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>