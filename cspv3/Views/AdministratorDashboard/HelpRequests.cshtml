
@model List<cspv3.Models.ContactSupport>

@using Microsoft.AspNetCore.Http;
@using X.PagedList.Mvc.Core
@{
    ViewBag.Title = "Help Requests";
    Layout = "_AdminLayout";
}

<div class="row">

    <div class="col-sm-12">


        <div class="page-header">


            <h4 class="page-title" style="color: black"> Help Requests </h4>



            <nav aria-label="breadcrumb">
                <ol class="breadcrumb">
                    <li class="breadcrumb-item"><a href="#">Dashboard</a></li>
                    <li class="breadcrumb-item active" aria-current="page">All Requests</li>
                </ol>
            </nav>

        </div>

        <div class="row grid-margin col-lg-12">
            <div class="col-lg-12">
                <div class="card">
                    <div class="card-body">

                        <br />

                        <div class="panel panel-default card-view">
                            <div class="panel-wrapper collapse in">

                                <div class="panel-body">

                                    <div class="table-wrap">
                                        <div class="table-responsive">
                                            <table id="example" class="table table-hover display  pb-30">
                                                <thead class="blue-grey lighten-4">
                                                    <tr>
                                                        <th>
                                                            Request ID
                                                        </th>
                                                        <th>
                                                            Owner Name
                                                        </th>
                                                        <th>
                                                            Email
                                                        </th>

                                                        <th>
                                                            Phone
                                                        </th>
                                                        <th>
                                                            Subject
                                                        </th>
                                                        <th>
                                                            Date Created
                                                        </th>

                                                    </tr>
                                                </thead>
                                                <tbody>
                                                    @foreach (var item in Model)
                                                    {
                                                        <tr>
                                                            <td>
                                                                @Html.DisplayFor(modelItem => item.Id)
                                                            </td>
                                                            <td>
                                                                @Html.DisplayFor(modelItem => item.Name)
                                                            </td>
                                                            <td>
                                                                @Html.DisplayFor(modelItem => item.Email)
                                                            </td>
                                                            <td>
                                                                @Html.DisplayFor(modelItem => item.Phone)
                                                            </td>
                                                            <td>
                                                                @Html.DisplayFor(modelItem => item.Subject)
                                                            </td>



                                                            <td>
                                                                @Html.DisplayFor(modelItem => item.DateCreated)
                                                            </td>



                                                        </tr>

                                                    }
                                                </tbody>
                                            </table>
                                        </div>
                                        <br />
                                        @*Page @(Model.PageCount < Model.PageNumber ? 0 : Model.PageNumber) of @Model.PageCount
                                            @Html.PagedListPager(Model, page => Url.Action("HelpRequests",
                                                new { page }))*@
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
    </div>
