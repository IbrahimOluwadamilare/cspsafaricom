@model cspv3.Models.Order

@{
    ViewData["Title"] = "Confirm Fulfill";
    Layout = "_AdminDashboardLayout.cshtml";

}


<div class="content-wrapper">
    <div class="page-header">
        <h3 class="page-title">
            Order Fulfillment
        </h3>
        <nav aria-label="breadcrumb">
            <ol class="breadcrumb">
                <li class="breadcrumb-item"><a href="#">Home</a></li>
                <li class="breadcrumb-item active" aria-current="page">Order Fulfilment</li>
            </ol>
        </nav>
    </div>
    <div class="row grid-margin col-lg-12">
        <div class="col-lg-12">
            <div class="card">
                <div class="card-body">




                    <div class="m-portlet__body">
                        <h2>Fulfill Order @Model.Refinfo</h2>

                  
                                    <h3>Are you sure you want to fulfill this?</h3>
                                    <div>

                                        <dl class="dl-horizontal">
                                            <dt>
                                                @Html.DisplayNameFor(model => model.Refinfo)
                                            </dt>
                                            <dd>
                                                @Html.DisplayFor(model => model.Refinfo)
                                            </dd>


                                        </dl>

                                        <form asp-action="FulFillOrder">
                                            <input type="hidden" name="id" value="@Model.OrderId" />
                                            <input type="submit" value="Fulfill" class="btn btn-facebook" /> 
                                        </form>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
                        </div>

