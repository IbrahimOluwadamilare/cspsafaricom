@model cspv3.Models.CspApiModels.UserModel
@{
    ViewBag.Title = "Users";
    Layout = "_AdminDashboardLayout.cshtml";
    var CustomerId = ViewBag.CustomerId as string;

}
@using Microsoft.AspNetCore.Http;
@inject UserManager<ApplicationUser> userManager;


<div class="content-wrapper">
    <div class="page-header">
        <h3 class="page-title">
            Create User
        </h3>
        <nav aria-label="breadcrumb">
            <ol class="breadcrumb">
                <li class="breadcrumb-item"><a href="#">Home</a></li>
                <li class="breadcrumb-item"><a asp-action="Managecustomers" asp-controller="AdministratorDashBoard">Registered Customers</a></li>
                <li class="breadcrumb-item active" aria-current="page"> Create User</li>
            </ol>
        </nav>
    </div>
    <div class="row grid-margin col-lg-6">
        <div class="col-lg-12">
            <div class="card">
                <div class="card-body">
                    <h4 class="card-title">User Informations</h4>

                    <div class="col-lg-12">
                        <div class="col-xl-12 col-lg-12">
                            <!-- Begin Header Overview-->
                            <!--Begin::Main Portlet-->
                            <div class="m-portlet m-portlet--mobile">

                                <div class="m-portlet m-portlet--tab">
                                    
                                    <!--begin::Form-->
                                    <form class="m-form m-form--fit m-form--label-align-right" method="post" asp-controller="Administratordashboard" asp-action="CreateUser">
                                        <div class="m-portlet__body">
                                            <div class="form-group m-form__group">
                                                <label for="subject">
                                                    Principal Name
                                                </label>
                                                <input asp-for="UserPrincipalName" type="text" class="form-control m-input" id="subject">
                                                <span asp-validation-for="UserPrincipalName"></span>

                                            </div>



                                            <div class="form-group m-form__group">
                                                <label for="firstname">
                                                    First Name
                                                </label>
                                                <input asp-for="FirstName" type="text" class="form-control m-input" id="firstname">
                                                <span asp-validation-for="FirstName"></span>
                                            </div>

                                            <div class="form-group m-form__group">
                                                <label for="lastname">
                                                    Last Name
                                                </label>
                                                <input asp-for="LastName" type="text" class="form-control m-input" id="lastname">
                                                <span asp-validation-for="LastName"></span>
                                            </div>

                                            <div class="form-group m-form__group">
                                                <label for="displayname">
                                                    Display Name
                                                </label>
                                                <input asp-for="DisplayName" type="text" class="form-control m-input" id="displayname">
                                                <span asp-validation-for="DisplayName"></span>
                                            </div>


                                            <div class="form-group m-form__group">

                                                <input name="customerid" value="@CustomerId" class="form-control m-input" type="hidden">
                                                <span asp-validation-for="DisplayName"></span>
                                            </div>

                                        </div>

                                        <div class="m-portlet__foot m-portlet__foot--fit">
                                            <div class="m-form__actions">
                                                <button type="submit" value="submit" class="btn btn-facebook">
                                                    Create
                                                </button>


                                            </div>
                                        </div>
                                    </form>
                                    <!--end::Form-->
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
<!--end::Portlet-->
