@using System.Collections.Generic
@using System.Linq
@using Microsoft.AspNetCore.Http
@using Microsoft.AspNetCore.Http.Authentication
@model LoginViewModel
@inject SignInManager<ApplicationUser> SignInManager

@{
    ViewData["Title"] = "Log in";
    Layout = "_Layout";
}


<section id="page-title" data-parallax-image="../img/5.jpg">
    <div class="parallax-container img-loaded" data-velocity="-.090" style="background: url(&quot;/img/5.jpg&quot;) 0px;"></div>
    <div class="container">
        <div class="page-title">
            <h1>User login</h1>
           
        </div>
        
    </div>
</section>
<section>
    <div class="container">
        <div class="row">
            <div class="col-lg-4 offset-4">
                <div class="panel ">
                    <div class="panel-body">
                        <h3>Login</h3>
                        <form asp-route-returnurl="@ViewData["ReturnUrl"]" method="post">
                            <div asp-validation-summary="All" class="text-danger"></div>
                            <div class="form-group">
                                <label class="sr-only">Username or Email</label>
                                <input type="text" placeholder="Username or Email" asp-for="Email" class="form-control">
                                <span asp-validation-for="Email" class="text-danger"></span>
                            </div>
                            <div class="form-group m-b-5">
                                <label class="sr-only">Password</label>
                                <input type="password" placeholder="Password" class="form-control" asp-for="Password" autocomplete="off">
                                <span asp-validation-for="Password" class="text-danger"></span>
                            </div>

                            <div class="form-group form-inline m-b-10 ">
                                <div class="form-check">
                                    <label>
                                        <input type="checkbox" asp-for="RememberMe"><small class="m-l-10"> Remember me</small>
                                    </label>
                                </div>
                            </div>

                            <div class="form-group">
                                <button class="btn" type="submit">Login</button>
                            </div>
                        </form>
                    </div>
                </div><p class="small">Don't have an account yet? <a  asp-action="register"style="color:blue">Register New Account</a></p>
            </div>
        </div>
    </div>
</section>
