
@{
    ViewData["Title"] = "Staff Dashboard";
    Layout = "_StaffLayout";
}



<!-- Row -->
<nav aria-label="breadcrumb">
  <ol class="breadcrumb">
    <li class="breadcrumb-item"><a href="#">Home</a></li>
    <li class="breadcrumb-item"><a asp-controller="Staff" asp-action="Support">Support</a></li>
    <li class="breadcrumb-item active" aria-current="page">Create Support Ticket</li>
  </ol>
</nav>
<br /><br />
      <h4>Raise A Support Ticket</h4>

<br /><br />

      <div class="col-sm-6">
          <div class="panel panel-default card-view">
              <div class="panel-heading">
                  <div class="pull-left">
                      <h6 class="panel-title txt-dark"></h6>
                  </div>
                  <div class="clearfix"></div>
              </div>
              <div class="panel-wrapper collapse in">
                  <div class="panel-body">
                      <div class="form-wrap">
                          <form>

                              <div class="row">
                                  <div class="col-md-6">
                                      <div class="form-group">
                                          <label class="control-label mb-10 text-left"><span class="help">Ticket ID</span></label>
                                          <input type="text" id="state-success" name="state-success" class="form-control" placeholder="#1256">
                                      </div>
                                  </div>
                                  <!--/span-->
                                  <div class="col-md-6">

                                      <div class="form-group">
                                          <label class="control-label mb-10 text-left"><span class="help">Ticket Title</span></label>
                                          <input type="text" class="form-control" value="" placeholder="Ticket Title">
                                      </div>
                                  </div>
                                  <!--/span-->
                              </div>
                              <div class="row">
                                  <div class="col-md-12">
                                      <div class="form-group">
                                          <label class="control-label mb-10 text-left" for="example-email">Product Name</label>
                                          <input type="text" id="example-email" name="example-email" class="form-control" placeholder="Product Name">
                                      </div>
                                  </div>

                              </div>
                              <!--/span-->
                              <div class="row">
                                  <div class="col-md-12">

                                      <div class="form-group">
                                          <label class="control-label mb-10 text-left">Problem Description</label>
                                          <textarea class="form-control" rows="5"></textarea>
                                      </div>
                                  </div>
                                  </div>
                                  <!--/span-->
                                  <div class="row">
                                      <div class="col-md-6">
                                          <div class="form-group mt-30 mb-30">
                                              <label class="control-label mb-10 text-left">Ticket Type</label>
                                              <select class="form-control">
                                                  <option>Problem</option>

                                              </select>
                                          </div>
                                      </div>
                                      <!--/span-->
                                      <div class="col-md-6">

                                          <div class="form-group mt-30 mb-30">
                                              <label class="control-label mb-10 text-left">Ticket Channel</label>
                                              <select class="form-control">
                                                  <option>Other</option>

                                              </select>
                                          </div>
                                      </div>
                                      <!--/span-->
                                  </div>

                                  <div class="form-group mb-0">
                                      <button type="button" class="btn btn-success btn-anim"><i class="icon-rocket"></i><span class="btn-text">submit</span></button>
                                  </div>
                          </form>
                      </div>
                  </div>
              </div>
          </div>
      </div>