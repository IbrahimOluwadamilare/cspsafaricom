<!-- checkout-area start -->
<div class="checkout-area pb-70">
    <div class="container">
        <div class="row">
            <br />
            <br />
            <br />

            <div class="text-center">
                <div class="h2">Order Status</div>
                <div class="title-underline center"><span></span></div>
            </div>
            <br />
            <div class="row grid-margin">
                <div class="col-12">
                    <div class="alert alert-info" role="alert">
                        <h2> @ViewData["Message"]</h2> <br /><br />
                    </div>

                </div>
                @{
                    string msg = @ViewData["Message"].ToString();

                }
                @if (msg.Contains("Error"))
                {

                    <centre>
                        <br />    <a class="button size-2 style-2" asp-controller="CustomerDashboard" asp-action="Support">
                            <span class="button-wrapper">
                                <span class="icon"><img src="/exzo/img/icon-1.png" alt=""></span>
                                <span class="text">Create a Support Ticket</span>
                            </span>
                        </a>
                    </centre>
                    <br />
                    <br />


                }
                @if (msg.Contains("Congratulations"))
                {
                    <div class="col-12" align="center">
                        <hr />
                        <iframe width="854" height="480" src="https://www.youtube.com/embed/6uqQTpDnnB0" frameborder="0" allow="accelerometer; autoplay; encrypted-media; gyroscope; picture-in-picture" allowfullscreen></iframe>
                    </div>

                    <centre>
                        <br />    <a class="button size-2 style-2" asp-controller="CustomerDashboard" asp-action="Subscriptions">
                            <span class="button-wrapper">
                                <span class="icon"><img src="/exzo/img/icon-1.png" alt=""></span>
                                <span class="text">Go to Administrative Dashboard</span>
                            </span>
                        </a>
                    </centre>
                    <br />
                    <br />
                }

            </div>


           
        
        </div>
    </div>
</div>

