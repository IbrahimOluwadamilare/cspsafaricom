@model ShowRecoveryCodesViewModel
@{
    ViewData["Title"] = "Recovery codes";
    ViewData.AddActivePage(ManageNavPages.TwoFactorAuthentication);
    Layout = "_CustomerDashboardLayout.cshtml";

}

<div class="page-header">


    <h4 class="page-title" style="color:darkgoldenrod">
        @ViewData["Title"]
    </h4>



    <nav aria-label="breadcrumb">
        <ol class="breadcrumb">
            <li class="breadcrumb-item"><a href="#">Home</a></li>
            <li class="breadcrumb-item"><a asp-action="twofactorauthentication" asp-controller="Manage">2FA</a></li>
            <li class="breadcrumb-item"><a asp-action="generaterecoverycodeswarning" asp-controller="Manage">Generate Recovery Codes</a></li>

            <li class="breadcrumb-item active" aria-current="page">
                Show Recovery Codes
            </li>
        </ol>
    </nav>

</div>
<div class="card">
    <div class="card-body">
        <div class="alert alert-warning" role="alert">
            <p>
                <span class="glyphicon glyphicon-warning-sign"></span>
                <strong>Put these codes in a safe place.</strong>
            </p>
            <p>
                If you lose your device and don't have the recovery codes you will lose access to your account.
            </p>
        </div>
        <div class="row">
            <div class="col-md-12">
                @for (var row = 0; row < Model.RecoveryCodes.Length; row += 2)
                {
                    <code>@Model.RecoveryCodes[row]</code><text>&nbsp;</text><code>@Model.RecoveryCodes[row + 1]</code><br />
                }
            </div>
        </div>
        </div>
</div>