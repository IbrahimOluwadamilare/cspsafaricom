
@{
    if (User.Identity.IsAuthenticated)
    {
        if (@User.IsInRole("Admin"))
        {
            ViewData["Title"] = "Generate two-factor authentication (2FA) recovery codes";
            ViewData.AddActivePage(ManageNavPages.TwoFactorAuthentication);
           Layout = "_AdminLayout";
        }
        else
        {
            ViewData["Title"] = "Generate two-factor authentication (2FA) recovery codes";
            ViewData.AddActivePage(ManageNavPages.TwoFactorAuthentication);
           Layout = "_CustomerLayout";
        }

    }
}



<div class="page-header">


    <h4 class="page-title" style="color:darkgoldenrod">
        @ViewData["Title"]
    </h4>



    <nav aria-label="breadcrumb">
        <ol class="breadcrumb">
            <li class="breadcrumb-item"><a href="#">Home</a></li>
            <li class="breadcrumb-item"><a asp-action="twofactorauthentication" asp-controller="Manage">2FA</a></li>

            <li class="breadcrumb-item active" aria-current="page">
                Generate Recovery Codes
            </li>
        </ol>
    </nav>

</div>

<div class="card">
    <div class="card-body">
        <div class="alert alert-warning" role="alert">
            <p>
                <span class="glyphicon glyphicon-warning-sign"></span>
                <strong>This action generates new recovery codes.</strong>
            </p>
            <p>
                If you lose your device and don't have the recovery codes you will lose access to your account.
            </p>
            <p>
                Generating new recovery codes does not change the keys used in authenticator apps. If you wish to change the key
                used in an authenticator app you should <a asp-action="ResetAuthenticatorWarning">reset your authenticator keys.</a>
            </p>
        </div>

        <div>
            <form asp-action="GenerateRecoveryCodes" method="post" class="form-group">
                <button class="btn btn-facebook" type="submit">Generate Recovery Codes</button>
            </form>
        </div>
    </div>
</div>